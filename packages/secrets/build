#!/bin/bash
mkdir -p /pkg/src/github.com/mesosphere
# Create the GOPATH for the go tool to work properly
mv /pkg/src/secrets /pkg/src/github.com/mesosphere/dcos-security
cd /pkg/src/github.com/mesosphere/dcos-security/secrets/
make build
# Copy the build from the bin to the correct place
cp -r ./bin/ "$PKG_PATH"

cp /pkg/extra/secrets.sh  $PKG_PATH/bin/secrets.sh
chmod +x $PKG_PATH/bin/secrets.sh

secrets_service="$PKG_PATH/dcos.target.wants_master/dcos-secrets.service"
mkdir -p $(dirname "$secrets_service")

cp /pkg/extra/dcos-secrets.service "$secrets_service"
